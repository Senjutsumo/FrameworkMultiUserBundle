{% extends "SumoCodersFrameworkMultiUserBundle::empty_layout.html.twig" %}

{% block sumocoders_multi_user_content %}

  {{ form_start(form) }}
  {{ form_errors(form) }}
  <div class="form-group">
    <label class="control-label" for="username">
      {{ form_label(form.userName) }}
    </label>

    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <i class="fas fa-user fa-lg"></i>
        </span>
      </div>
      {{ form_widget(form.userName, {attr: {class: 'form-control-lg'}}) }}
    </div>
  </div>
  {{ form_widget(form.submit, {attr: {class: 'btn-success btn-block'}}) }}
  {{ form_rest(form) }}
  {{ form_end(form) }}

{% endblock %}
